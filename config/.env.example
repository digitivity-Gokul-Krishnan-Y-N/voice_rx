# Environment Variables Example
# Copy this to .env and fill in your actual values
# DO NOT commit .env to git - it contains secrets!

# Groq API Configuration
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Configuration (optional, if using OpenAI Whisper)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# System Configuration
LOG_LEVEL=INFO
DEBUG_MODE=False

# Database
DATABASE_URL=sqlite:///data/prescriptions.db

# Audio Processing
AUDIO_SAMPLE_RATE=16000
MONO_AUDIO=True

# Transcription
WHISPER_MODEL=medium
WHISPER_COMPUTE_TYPE=float32
WHISPER_BEAM_SIZE=5
WHISPER_DEVICE=cpu

# Groq LLM Configuration
GROQ_MODEL=openai/gpt-oss-120b
GROQ_TEMPERATURE=0
GROQ_MAX_TOKENS=2000
GROQ_TIMEOUT=30

# Extraction Quality Thresholds
MIN_CONFIDENCE=0.6
MIN_WORDS=20
QUALITY_THRESHOLD=0.7

# Validation Rules
MIN_MEDICINES=1
MAX_MEDICINES=10
MIN_ADVICE_ITEMS=3

# API Rate Limiting (for production)
GROQ_RATE_LIMIT=100
GROQ_RATE_WINDOW_SECONDS=60

# Logging
LOG_FILE=medical_system_v2.log
LOG_DIR=./logs
CONSOLE_LOG=True
FILE_LOG=True
